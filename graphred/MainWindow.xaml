<Window x:Class="graphedit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Графический редактор" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Height="50">

            <Button Content="Кисть" Margin="5" Padding="10"> </Button>
            <Button Content="Ластик" Margin="5" Padding="10"></Button>

            <ComboBox Width="80" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content= "тонкая"/>
                <ComboBoxItem Content= "средняя"/>
                <ComboBoxItem Content= "толстая"/>
            </ComboBox>

            <Button Content="цвет" Margin="5" Padding="10"/>
            <Button Content="отмена" Margin="5" Padding="10"/>
            <Button Content="повторить" Margin="5" Padding="10"/>
        </StackPanel>

        <Canvas Grid.Row="1" Name="DrawCanvas" Background="White"
            MouseDown = "DrawCanvasMouseDown"
            MouseMove="DrawCanvasMouseMove"
            MouseUp="DrawCanvasMouseUp"/>
        




    </Grid>
</Window>
